%% python_config.pl - Python Environment Configuration
%
% This file allows you to configure the Python shared library path
% for Scryer Prolog's Python integration.
%
% USAGE:
% 1. Copy this file to python_config.pl (without the .example extension)
% 2. Uncomment and modify the python_library_path/1 clause below
% 3. The library will use your specified path instead of auto-detection
%
% NOTE: python_config.pl is git-ignored, so your local configuration
% won't be committed to version control.

%% python_library_path_config(-Path)
%
% Specify the exact path to your Python shared library.
%
% Examples:
%
% % System Python 3.11 on Linux
% python_library_path_config('/usr/lib/x86_64-linux-gnu/libpython3.11.so').
%
% % Homebrew Python on macOS (Apple Silicon)
% python_library_path_config('/opt/homebrew/lib/libpython3.11.dylib').
%
% % Homebrew Python on macOS (Intel)
% python_library_path_config('/usr/local/lib/libpython3.11.dylib').
%
% % pyenv installation
% python_library_path_config('/home/user/.pyenv/versions/3.11.5/lib/libpython3.11.so').
%
% % Conda environment
% python_library_path_config('/home/user/miniconda3/envs/myenv/lib/libpython3.11.so').
%
% % uv-managed Python
% python_library_path_config('/home/user/.local/share/uv/python/cpython-3.11.5-linux-x86_64-gnu/lib/libpython3.11.so').
%
% Uncomment and modify one of the examples above, or add your own:
%
% python_library_path_config('/path/to/your/libpython3.X.so').
